{
  "name": "@texastribune/queso-tools",
  "version": "1.3.0-0",
  "description": "Node task runners for common front-end tasks",
  "main": "./lib/index.js",
  "scripts": {
    "test": "jest --env=node",
    "test:examples": "node examples/",
    "lint": "eslint lib tests",
    "prepublish": "yarn run lint && yarn run test",
    "release": "np --any-branch"
  },
  "files": [
    "/lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/texastribune/queso-tools.git"
  },
  "engines": {
    "node": ">=8.11.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "iOS >= 11",
    "Safari >= 11",
    "not dead"
  ],
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "no-console": "error",
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true
        }
      ]
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "license": "MIT",
  "author": "The Texas Tribune Engineering Team <tech@texastribune.org>",
  "bugs": {
    "url": "https://github.com/texastribune/queso-tools/issues"
  },
  "homepage": "https://github.com/texastribune/queso-tools#readme",
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^24.8.0",
    "np": "^5.0.3"
  },
  "dependencies": {
    "@texastribune/postcss-amp": "^1.4.0",
    "amphtml-validator": "^1.0.23",
    "autoprefixer": "^9.6.0",
    "clean-css": "^4.2.1",
    "fast-glob": "^3.0.1",
    "fs-extra": "^8.0.1",
    "node-sass": "^4.12.0",
    "ora": "^3.4.0",
    "postcss": "^7.0.17",
    "svgo": "^1.2.2",
    "svgstore": "^3.0.0-2"
  }
}
