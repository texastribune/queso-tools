{
  "name": "@texastribune/queso-tools",
  "version": "3.0.0",
  "description": "Node task runners for common front-end tasks",
  "main": "./lib/index.js",
  "scripts": {
    "test": "jest --env=node",
    "test:examples": "node examples/",
    "test:examples-dev": "NODE_ENV=development node examples/",
    "lint": "eslint lib tests",
    "prepublish": "npm run lint && npm run test",
    "release": "np --any-branch"
  },
  "files": [
    "/lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/texastribune/queso-tools.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "browserslist": [
    "last 2 versions",
    "firefox ESR",
    "iOS >= 12",
    "safari >= 12",
    "samsung >= 12",
    "not ie 11",
    "not dead"
  ],
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "no-console": "error",
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true
        }
      ]
    }
  },
  "jest": {
    "testTimeout": 10000
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "license": "MIT",
  "author": "The Texas Tribune Engineering Team <tech@texastribune.org>",
  "bugs": {
    "url": "https://github.com/texastribune/queso-tools/issues"
  },
  "homepage": "https://github.com/texastribune/queso-tools#readme",
  "devDependencies": {
    "@texastribune/queso-ui": "^10.3.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "jest": "^27.0.4",
    "jest-environment-node-single-context": "^27.3.0",
    "np": "^7.7.0"
  },
  "dependencies": {
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.1",
    "lightningcss": "^1.20.0",
    "md5-file": "^5.0.0",
    "ora": "^5.1.0",
    "sass": "^1.62.1",
    "svgo": "^3.0.2"
  }
}
