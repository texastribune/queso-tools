{
  "name": "@texastribune/queso-tools",
  "version": "2.2.4",
  "description": "Node task runners for common front-end tasks",
  "main": "./lib/index.js",
  "scripts": {
    "test": "jest --env=node",
    "test:examples": "node examples/",
    "lint": "eslint lib tests",
    "prepublish": "npm run lint && npm run test",
    "release": "np --any-branch"
  },
  "files": [
    "/lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/texastribune/queso-tools.git"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "iOS >= 11",
    "Safari >= 11",
    "not dead"
  ],
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "no-console": "error",
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true
        }
      ]
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "license": "MIT",
  "author": "The Texas Tribune Engineering Team <tech@texastribune.org>",
  "bugs": {
    "url": "https://github.com/texastribune/queso-tools/issues"
  },
  "homepage": "https://github.com/texastribune/queso-tools#readme",
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^27.0.4",
    "np": "^7.0.0"
  },
  "dependencies": {
    "amphtml-validator": "^1.0.23",
    "autoprefixer": "^10.1.0",
    "clean-css": "^5.2.0",
    "fast-glob": "^3.0.1",
    "fs-extra": "^9.0.0",
    "md5-file": "^5.0.0",
    "node-sass": "^6.0.1",
    "ora": "^5.1.0",
    "postcss": "^8.2.1",
    "postcss-amp": "^2.0.0",
    "svgo": "^1.2.2",
    "svgstore": "^3.0.0-2"
  }
}
